                                                                </div>
                                                                <div class="radio-inline c-radio">
                                                                    <label>
                                                                        <input type="radio" name="i-radio" value="L" checked="checked" ng-model="vm.opcionBusqueda" ng-change="vm.cambiarListaFiltro()">
                                                                        <span class="fa fa-map-marker"></span>@L("empresas_infoTributaria_localidades_asignar_tipoBusqueda_localidad")
