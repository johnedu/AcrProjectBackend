<script type="text/ng-template" id="customTemplate.html">
    <a>
        <span bind-html-unsafe="match.model.nombre | typeaheadHighlight:query"></span>
    </a>
</script>
<div class="app-container" ng-controller="app.views.empresas.infoTributaria as vm">
    <div class="app-view-header page-header">
        <div class="col-md-12">
            @L("empresas_infoTributaria_titulo")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5">
            <div class="panel panel-primary">
                <div class="panel-heading" ng-class="'bg-' + app.theme.name">
                    <span ng-if="!vm.editandoInfoTributaria">@L("empresas_infoTributaria_nuevo_titulo")</span>
                    <span ng-if="vm.editandoInfoTributaria">@L("empresas_infoTributaria_editar_titulo") - <span class="text-bold">{{vm.nombreInfoTributariaEditar | uppercase}}</span></span>
                </div>
                <div class="panel-body" ng-form="frmInfoTributaria">
                    <div class="form-group" ng-class="{'has-error' : frmInfoTributaria.iptNombreInfoTributaria.$dirty && frmInfoTributaria.iptNombreInfoTributaria.$invalid }">
                        <label class="control-label" for="iptNombreInfoTributaria">@L("empresas_infoTributaria_nuevo_nombre_nombre")</label>
                        <input type="text" class="form-control" id="iptNombreInfoTributaria" name="iptNombreInfoTributaria" placeholder="@L("empresas_infoTributaria_nuevo_nombre_placeholder")" ng-model="vm.infoTributaria.nombre" required maxlength="100" />
                        <div ng-show="frmInfoTributaria.iptNombreInfoTributaria.$dirty && frmInfoTributaria.iptNombreInfoTributaria.$invalid">
                            <small ng-show="frmInfoTributaria.iptNombreInfoTributaria.$error.required" class="text-danger">
                                @L("empresas_infoTributaria_nuevo_nombre_requerido")
                            </small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <label class="control-label" for="selectTipoValor">@L("empresas_infoTributaria_nuevo_tipoValor_nombre")</label>
                            <div class="form-group">
                                <select ng-model="vm.infoTributaria.tipoValorId" ng-options="to.id as to.nombre for to in vm.tiposValores" class="form-control" name="selectTipoValor" id="selectTipoValor">
                                    <option value="">@L("empresas_infoTributaria_nuevo_tipoValor_seleccione")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <label class="control-label">@L("empresas_infoTributaria_nuevo_estado_nombre")</label>
                            <div>
                                <label class="switch switch-lg" ng-class="'switch-' + app.theme.name">
                                    <input type="checkbox" checked="checked" ng-model="vm.infoTributaria.estadoId">
                                    <span></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <button class="btn btn-success btn-circle btn-lg" ng-click="vm.saveOrUpdateInfoTributaria()" ng-disabled="frmInfoTributaria.$invalid" title="@L("personas_tiposDocumento_nuevo_btnGuardar")">
                                    <em class="fa fa-save"></em>
                                </button>
                                &nbsp;
                                <button class="btn btn-warning btn-circle btn-lg" ng-click="vm.cancelarUpdateInfoTributaria()" title="@L("personas_tiposDocumento_nuevo_btnCancelar")">
                                    <em class="fa" ng-class="{'fa-ban': vm.editandoInfoTributaria, 'fa-eraser': !vm.editandoInfoTributaria}"></em>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-primary">
                <div class="panel-heading text-center" ng-class="'bg-' + app.theme.name">
                    <span ng-if="vm.listaInfoTributarias.totalFilas == 1">{{vm.listaInfoTributarias.totalFilas}}&nbsp;@L("empresas_infoTributaria_tabla_conteo_1registro")</span>
                    <span ng-if="vm.listaInfoTributarias.totalFilas != 1">{{vm.listaInfoTributarias.totalFilas}}&nbsp;@L("empresas_infoTributaria_tabla_conteo_masde1registro")</span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <tbody>
                                <tr ng-repeat="infoTributaria in vm.listaInfoTributarias.filasMostrar track by $index"
                                    ng-mouseenter="vm.controles.mostrar($index)"
                                    ng-mouseleave="vm.controles.ocultar($index)">
                                    <td>
                                        <h4 class="media-heading">
                                            <a class="clickable" ng-click="vm.cargarOpcionesInfoTributaria(infoTributaria.id, infoTributaria.nombre)" title="@L("empresas_infoTributaria_opciones_titulo")">
                                                {{infoTributaria.nombre}}
                                            </a>
                                        </h4>
                                        <span class="text-muted">
                                            {{infoTributaria.cantidadOpciones}} <span ng-show="infoTributaria.cantidadOpciones == '1'">@L("empresas_infoTributaria_tabla_opciones_1registro")</span><span ng-hide="infoTributaria.cantidadOpciones == '1'">@L("empresas_infoTributaria_tabla_opciones_masde1registro")</span>
                                        </span>
                                        &nbsp;&nbsp;-&nbsp;&nbsp;
                                        <span class="text-muted">
                                            {{infoTributaria.cantidadLocalidades}} <span ng-show="infoTributaria.cantidadLocalidades == '1'">@L("empresas_infoTributaria_tabla_localidades_1registro")</span><span ng-hide="infoTributaria.cantidadLocalidades == '1'">@L("empresas_infoTributaria_tabla_localidades_masde1registro")</span>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-muted">
                                            <span class="text-bold">
                                                <span ng-show="infoTributaria.tipoValor">
                                                    @L("empresas_infoTributaria_tabla_tipoValor_titulo")
                                                </span>
                                                <span ng-show="!infoTributaria.tipoValor">
                                                    @L("empresas_infoTributaria_tabla_tipoValor_notiene")
                                                </span>
                                            </span>
                                        </span>
                                        <h4 class="media-heading">
                                            {{infoTributaria.tipoValor}}
                                        </h4>
                                    </td>
                                    <td class="text-center">
                                        <span class="text-muted">
                                            <span class="text-bold">
                                                <span ng-show="infoTributaria.estado">
                                                    @L("empresas_infoTributaria_tabla_vigente_titulo")
                                                </span>
                                                <span ng-show="!infoTributaria.estado">
                                                    @L("empresas_infoTributaria_tabla_noVigente_titulo")
                                                </span>
                                            </span>
                                        </span>
                                        <br />
                                        <i class="fa fa-check fa-2x" ng-show="infoTributaria.estado" aria-hidden="true" title="@L("empresas_infoTributaria_tabla_Vigente_tooltip")"></i>
                                    </td>
                                    <td class="text-center">
                                        <span ng-show="vm.controles.visible[$index]" class="pull-right">
                                            <bow-operacion-editar-fila operacion-editar="vm.editarInfoTributaria(infoTributaria.id)"
                                                                       mensaje-tooltip="@L("empresas_infoTributaria_tabla_editar_tooltip")"
                                                                       ng-show="!vm.eliminadoInfoTributaria">
                                            </bow-operacion-editar-fila>
                                            <bow-operacion-eliminar-fila mensaje-confirmacion="@L("empresas_infoTributaria_tabla_eliminar_confirmar")"
                                                                         mensaje-tooltip="@L("empresas_infoTributaria_tabla_eliminar_tooltip")"
                                                                         operacion-puede-eliminar="vm.puedeEliminarInfoTributaria(infoTributaria.id, funcionRetornarPuedeEliminar)"
                                                                         no-puede-eliminar="vm.noPuedeEliminar()"
                                                                         confirmacion-ok="vm.eliminarInfoTributaria(infoTributaria.id)"
                                                                         confirmacion-cancel="vm.cancelarEliminar()">
                                            </bow-operacion-eliminar-fila>
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-center">
                            <pagination items-per-page="vm.listaInfoTributarias.filasPorPagina"
                                        total-items="vm.listaInfoTributarias.totalFilas"
                                        ng-model="vm.listaInfoTributarias.paginaActual"
                                        ng-change="vm.listaInfoTributarias.pageChanged()"
                                        class="pagination-sm"></pagination>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="panel panel-default">
                <div class="row">
                    <div class="col-md-2">
                        <div class="row row-flush text-center text-muted m0">
                            <div class="col-md-12 bb br pv-xxl clickable" ng-class="{'bg-info': vm.opcionParametro[0]}" ripple="" title='@L("empresas_infoTributaria_opciones_titulo_tooltip")' ng-click="vm.opcionOpciones()">
