<div class="alert alert-danger text-center" ng-show="mensajeError">
    <strong>{{mensajeError}}</strong>
</div>
<form role="form" name="frmAfiliacionPlanExequial">
    <div class="row">
        <div class="col-md-6">
            <div ng-show="!modoConsulta">
                <div class="form-group" ng-class="{'has-error' : frmAfiliacionPlanExequial.selectedPlanExequial.$dirty && frmAfiliacionPlanExequial.selectedPlanExequial.$invalid }">
                    <label class="control-label" for="selectedPlanExequial">@L("directiva_bowAfiliacionPlanExequial_planExequial_titulo")</label>
                    <select ng-model="selectedPlanExequial" ng-options="planExequial as planExequial.nombre for planExequial in listadoPlanesExequiales" 
                            class="form-control" name="selectedPlanExequial" id="selectedPlanExequial" ng-disabled="modoConsulta" ng-change="cambiarBeneficios()">
                        <option value="">@L("directiva_bowAfiliacionPlanExequial_planExequial_seleccione")</option>
                    </select>
                    <div ng-show="frmAfiliacionPlanExequial.selectedPlanExequial.$dirty && frmAfiliacionPlanExequial.selectedPlanExequial.$invalid">
                        <small ng-show="frmAfiliacionPlanExequial.selectedPlanExequial.$error.required" class="text-danger">
                            @L("directiva_bowAfiliacionPlanExequial_planExequial_requerido")
                        </small>
                    </div>
                </div>
            </div>
            <div ng-show="modoConsulta && selectedPlanExequial">
                <label class="control-label font-size-16">
                    @L("directiva_bowAfiliacionPlanExequial_planExequial_titulo")
                </label>
                <br />
                <label class="control-label">
                    {{selectedPlanExequial.nombre}}
                </label>
            </div>
            {{selectedPlanExequial.descripcion}}
        </div>
        <div class="col-md-6">
            <label class="control-label">@L("directiva_bowAfiliacionPlanExequial_moneda_titulo")</label>
            <br />
            {{selectedPlanExequial.moneda}}
        </div>
    </div>
</form>
<br />
<bow-afiliacion-beneficios-plan-exequial modo-consulta="modoConsulta"
                                         bow-selecciono-modelo="validarSeleccion(beneficios)"
                                         control-operaciones="controlBeneficios">
</bow-afiliacion-beneficios-plan-exequial>