                                            <div class="col-md-12">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <table class="table table-striped table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        <div class="row">
                                                                            <div class="col-lg-8">
                                                                                <h4 class="media-heading" ng-class="'text-' + app.theme.name">
                                                                                    @L("empresas_infoTributaria_localidades_tabla_localidad_titulo")
                                                                                </h4>
                                                                            </div>
                                                                            <div class="col-lg-4 text-right">
                                                                                <p>{{vm.listaLocalidadesTabla.totalFilas}} <span ng-show="vm.listaLocalidadesTabla.totalFilas == '1'">@L("empresas_infoTributaria_localidades_tabla_conteo_1registro")</span><span ng-hide="vm.listaLocalidadesTabla.totalFilas == '1'">@L("empresas_infoTributaria_localidades_tabla_conteo_masde1registro")</span></p>
                                                                            </div>
                                                                        </div>
                                                                    
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr ng-repeat="localidad in vm.listaLocalidadesTabla.filasMostrar track by $index">
                                                                    <td>
                                                                        <strong>{{localidad.nombre}}</strong>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                <div class="text-center">
                                                    <pagination items-per-page="vm.listaLocalidadesTabla.filasPorPagina"
