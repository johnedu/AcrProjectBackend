                                        <label class="control-label" ng-show="!vm.editandoOpcionInfoTributaria">@L("empresas_infoTributaria_opciones_form_nuevo_titulo")</label>
                                        <label class="control-label" ng-show="vm.editandoOpcionInfoTributaria">@L("empresas_infoTributaria_opciones_form_editar_titulo")</label>
                                        <br />
                                        <div class="form-group" ng-class="{'has-error' : formOpcionInfoTributaria.iptNombreOpcionInfoTributaria.$dirty && formOpcionInfoTributaria.iptNombreOpcionInfoTributaria.$invalid }">
                                            <label class="control-label" for="iptNombreInfoTributaria">@L("empresas_infoTributaria_opciones_form_nuevo_nombre")</label>
                                            <input type="text" class="form-control" id="iptNombreOpcionInfoTributaria" name="iptNombreOpcionInfoTributaria" placeholder="@L("empresas_infoTributaria_opciones_form_nuevo_nombre_tooltip")" ng-model="vm.opcionInfoTributaria.nombre" required maxlength="50" />
                                            <div ng-show="formOpcionInfoTributaria.iptNombreOpcionInfoTributaria.$dirty && formOpcionInfoTributaria.iptNombreOpcionInfoTributaria.$invalid">
                                                <small ng-show="formOpcionInfoTributaria.iptNombreOpcionInfoTributaria.$error.required" class="text-danger">
                                                    @L("empresas_infoTributaria_opciones_form_nuevo_nombre_requerido")
                                                </small>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="pull-right">
                                                    <button type="button" class="btn btn-success btn-circle btn-lg" ng-click="vm.saveOrUpdateOpcionInfoTributaria()" ng-disabled="formOpcionInfoTributaria.$invalid" title="@L("personas_tiposDocumento_nuevo_btnGuardar")">
                                                        <em class="fa fa-save"></em>
                                                    </button>
                                                    &nbsp;
                                                    <button type="button" class="btn btn-warning btn-circle btn-lg" ng-click="vm.cancelarUpdateOpcionesInfoTributaria(true)" title="@L("empresas_infoTributaria_opciones_btn_limpiar")">
                                                        <em class="fa" ng-class="{'fa-ban': vm.editandoOpcionInfoTributaria, 'fa-eraser': !vm.editandoOpcionInfoTributaria}"></em>
                                                    </button>
                                                    &nbsp;
                                                    <button type="button" class="btn btn-danger btn-circle btn-lg" ng-click="vm.cancelarUpdateOpcionesInfoTributaria(false)" title="@L("empresas_infoTributaria_opciones_btn_cancelar")">
                                                        <em class="fa fa-close"></em>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row" ng-if="!vm.verFormularioOpciones && vm.nombreInfoTributariaOpciones">
                                        <div class="col-lg-12 text-right">
                                            <button type="button" class="btn btn-success btn-circle btn-lg" ng-click="vm.nuevaOpcionInfoTributaria()" title="@L("empresas_infoTributaria_opciones_btn_nueva")">
                                                <em class="fa fa-plus"></em>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="table-responsive" ng-if="!vm.verFormularioOpciones">
                                        <table class="table table-hover">
                                            <tbody>
                                                <tr ng-repeat="opcionInfoTributaria in vm.listaOpcionesInfoTributaria.filasMostrar track by $index"
                                                    ng-mouseenter="vm.controlesOpciones.mostrar($index)"
                                                    ng-mouseleave="vm.controlesOpciones.ocultar($index)">
                                                    <td>
                                                        <h5 class="media-heading">
                                                            {{opcionInfoTributaria.nombre}}
                                                        </h5>

                                                    </td>
                                                    <td class="text-center">
                                                        <span ng-show="vm.controlesOpciones.visible[$index]" class="pull-right">
                                                            <bow-operacion-editar-fila operacion-editar="vm.editarOpcionInfoTributaria(opcionInfoTributaria.id)"
                                                                                       mensaje-tooltip="@L("empresas_infoTributaria_opciones_tabla_editar_tooltip")"
                                                                                       ng-show="!vm.eliminandoOpcionInfoTributaria">
                                                            </bow-operacion-editar-fila>
                                                            <bow-operacion-eliminar-fila mensaje-confirmacion="@L("empresas_infoTributaria_opciones_tabla_eliminar_confirmar")"
                                                                                         mensaje-tooltip="@L("empresas_infoTributaria_opciones_tabla_eliminar_tooltip")"
                                                                                         operacion-puede-eliminar="vm.puedeEliminarOpcionInfoTributaria(opcionInfoTributaria.id, funcionRetornarPuedeEliminar)"
                                                                                         no-puede-eliminar="vm.noPuedeOpcionEliminar()"
                                                                                         confirmacion-ok="vm.eliminarOpcionInfoTributaria(opcionInfoTributaria.id, opcionInfoTributaria.nombre)"
                                                                                         confirmacion-cancel="vm.cancelarOpcionEliminar()">
                                                            </bow-operacion-eliminar-fila>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <div class="text-center">
                                            <pagination items-per-page="vm.listaOpcionesInfoTributaria.filasPorPagina"
                                                        total-items="vm.listaOpcionesInfoTributaria.totalFilas"
                                                        ng-model="vm.listaOpcionesInfoTributaria.paginaActual"
                                                        ng-change="vm.listaOpcionesInfoTributaria.pageChanged()"
                                                        class="pagination-sm"></pagination>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10" ng-if="vm.opcionParametro[1]">
                        <div class="p pv-xxl">
                            <div class="panel panel-purple">
                                <div class="panel-heading">
                                    <span ng-if="vm.administrandoOpcionesLocalidades">@L("empresas_infoTributaria_localidades_panel_titulo") - <span class="text-bold">{{vm.nombreInfoTributariaOpciones | uppercase}}</span></span>
                                </div>
                                <div class="panel-body" ng-if="vm.administrandoOpcionesLocalidades">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="button" class="btn btn-success btn-circle btn-lg" ng-click="vm.mostrarFormularioAsignarLocalidad()" title="@L("empresas_infoTributaria_localidades_btnAsignar_tooltip")">
                                                <em class="fa fa-plus"></em>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-circle btn-lg" ng-click="vm.mostrarFormularioEliminarLocalidad()" title="@L("empresas_infoTributaria_localidades_btnEliminar_tooltip")">
                                                <em class="fa fa-trash"></em>
                                            </button>
                                        </div>
                                    </div>
                                    <br />
                                    <div ng-show="vm.mostrarLocalidadesLista">
                                        <form role="form" name="formLocalidad">
                                            <input id="formLocalidadOculto" ng-model="vm.formLocalidad" ng-init="vm.formLocalidad = formLocalidad" hidden>
                                            <div class="row">
                                                <div class="col-md-1">
                                                    <label class="control-label" for="iptLocalidad">@L("empresas_infoTributaria_localidades_filtro_nombre")</label>
                                                </div>
                                                <div class="col-md-11">
                                                    <input id="iptLocalidad" name="iptLocalidad" type="text" ng-model="selected" class="form-control" typeahead-editable="false" ng-change="vm.validarTypeaheadVacio(selected.id)"
                                                           typeahead="localidad as localidad.nombre for localidad in vm.filterByLocalidadAndDepartamentoAndPais(vm.localidades, $viewValue)"
                                                           typeahead-template-url="customTemplate.html" typeahead-on-select="vm.cargarLocalidadesLista(selected.id, selected.nombre, selected.tipoEntrada)" required>
                                                    <div ng-show="formLocalidad.iptLocalidad.$dirty && formLocalidad.iptLocalidad.$invalid">
                                                        <small ng-show="formLocalidad.iptLocalidad.$invalid && !formLocalidad.iptLocalidad.$error.required" class="text-danger">
                                                            @L("empresas_infoTributaria_localidades_filtro_noSelecciono")
