<div class="row">
    <div class="col-md-5 text-center">
        <label class="control-label">@L("directiva_bowBuscarGrupoInformal_formaBusqueda")</label>
        <br />
        <div class="btn-group">
            <div class="radio-inline c-radio">
                <label>
                    <input type="radio" name="i-radio" value="nombre" checked="checked" ng-model="formaBusqueda" ng-change="limpiarFormulario()">
                    <span class="fa fa-users"></span>@L("directiva_bowBuscarGrupoInformal_formaBusqueda_nombre")
                </label>
            </div>
            <div class="radio-inline c-radio">
                <label>
                    <input type="radio" name="i-radio" value="contacto" checked="checked" ng-model="formaBusqueda" ng-change="limpiarFormulario()">
                    <span class="fa fa-user"></span>@L("directiva_bowBuscarGrupoInformal_formaBusqueda_contacto")
                </label>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="form-group" ng-show="formaBusqueda == 'nombre'">
            <bow-buscar-nombre-grupo-informal ng-required="true"
                                              selected="selected"
                                              titulolabel='@L("directiva_bowBuscarGrupoInformal_formaBusqueda_buscarNombre")'
                                              tituloplaceholder='@L("directiva_bowBuscarGrupoInformal_formaBusqueda_buscarNombre_tooltip")'
                                              bow-selecciono-nombre="seleccionoGrupoInformal(grupoInformal)"
                                              control-operaciones="controlBuscarNombreGrupoInformal">
            </bow-buscar-nombre-grupo-informal>
        </div>
        <div class="form-group" ng-show="formaBusqueda == 'contacto'">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label" for="iptCedula">@L("directiva_bowBuscarGrupoInformal_cedulaContacto")</label>
                </div>
                <div class="col-md-6 text-right">
                    <label bow-modalbuscarpersona-grupoinformal class="clickable text-primary" bow-seleccionopersona="seleccionoPersona(personaSeleccion)" titulo="@L("directiva_bowBuscarGrupoInformal_link_buscador")">@L("directiva_bowBuscarGrupoInformal_link_buscador")</label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group">
                        <input type="text" class="form-control" id="iptCedula" name="iptCedula" placeholder="@L("directiva_bowBuscarGrupoInformal_cedulaContacto_placeholder")" ng-model="cedulaContacto" required maxlength="100">
                        <div class="input-group-btn">
                            <label class="btn btn-primary" ng-click="seleccionoDocumentoPersona()" ng-disabled="!cedulaContacto" title="@L("directiva_bowBuscarGrupoInformal_cedulaContacto_buscar_tooltip")">
                                <span class="glyphicon fa fa-search"></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" ng-show="formaBusqueda == 'contacto'">
    <div class="col-md-12">
        <label class="control-label">@L("directiva_bowBuscarGrupoInformal_tablaEncontrados_titulo")</label>
        <div class="table-responsive">
            <table class="table table-hover">
                <tbody>
                    <tr ng-repeat="grupoInformal in listadoGruposInformales">
                        <td>
                            <h4 class="media-heading">
                                {{grupoInformal.nombre }}
                            </h4>
                            <span class="text-muted">
                                ( {{grupoInformal.nombreContacto}} )
                            </span>
                        </td>
                        <td class="pull-right">
                            <button class="btn btn-success btn-circle btn-lg" ng-click="seleccionoGrupoInformal(grupoInformal)" title="@L("directiva_bowBuscarGrupoInformal_tabla_consultar_btn")">
                                <em class="fa fa-eye"></em>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>