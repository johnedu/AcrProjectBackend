<div class="alert alert-danger text-center" ng-show="mensajeError">
    <strong>{{mensajeError}}</strong>
</div>
<div ng-form="frmRegistrarDireccion">
    <div class="row">
        <div class="col-md-8">
            <bow-buscarlocalidad ng-model="selectedLocalidad" titulo=@L("zonificacion_direccion_nuevoDireccionLocalidad") mostrarindicativo="false" bow-seleccionolocalidad="seleccionoLocalidad(localidad)" ng-disabled="inputLocalidadDisabled"></bow-buscarlocalidad>
        </div>
        <div class="col-md-4" ng-show="barriomostrar">
            <label class="control-label" for="iptBarrio">@L("zonificacion_direccion_nuevoDireccionBarrio")</label>
            <select ng-model="barrio" ng-options="to.id as to.nombre for to in barrios" class="form-control" name="selectBarrios" required ng-disabled="!selectedLocalidad">
                <option value="">@L("zonificacion_direccion_nuevoDireccion_Seleccione")</option>
            </select>
        </div>
    </div>
    <div class="row" ng-show="selectedLocalidad && barrio">
        <div class="col-lg-12">
            <div class="row text-center">
                <div class="col-lg-12">
                    <div class="btn-group">
                        <div class="radio-inline c-radio">
                            <label>
                                <input type="radio" name="i-radio" value="ConNomenclatura" ng-model="radioModel" ng-change="mostrarNomenclatura(true)">
                                <span class="fa fa-check"></span>@L("zonificacion_direccion_nuevoDireccionConNomenclatura")
                            </label>
                        </div>
                        <div class="radio-inline c-radio">
                            <label>
                                <input type="radio" name="i-radio" value="SinNomenclatura" ng-model="radioModel" ng-change="mostrarNomenclatura(false)">
                                <span class="fa fa-close"></span>@L("zonificacion_direccion_nuevoDireccionSinNomenclatura")
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-show="mostrarNomenclaturaPais">
                <div ng-show="!mostrarNomenclaturaGeneral">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label" for="iptNombre">@L("zonificacion_direccion_nuevoDireccionNombre")</label>
                                <input type="text" class="form-control" id="iptNombre" name="iptNombre" placeholder="@L("zonificacion_direccion_nuevoDireccionNombre")" ng-model="nombre" required maxlength="150" />
                            </div>
                        </div>
                    </div>
                </div>
                <div ng-show="mostrarNomenclaturaGeneral">
                    <div class="row">
                        <div class="col-lg-4 ">
                            <div class="form-group">
                                <label class="control-label" for="iptTorieLocalidad">@L("zonificacion_direccion_nuevoDireccionViaPrincipal")</label>
                                <select ng-model="torieLocalidad1" ng-options="to.id as to.nombreTipoOrientacion for to in toriesLocalidad1" ng-change="viaPrincipalChange()" class="form-control" required>
                                    <option value="">@L("zonificacion_direccion_nuevoDireccion_Seleccione")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4" ng-show="!mostrarAvenidaPrincipal">
                            <div class="form-group">
                                <label class="control-label" for="iptNumero1">@L("zonificacion_direccion_nuevoDireccionNumero1")</label>
                                <input type="text" ng-pattern="/^[0-9]+$/" class="form-control" id="iptNumero1" name="iptNumero1" placeholder="@L("zonificacion_direccion_nuevoDireccionNumero1")" ng-model="orientacion1" required maxlength="5" />
                                <small ng-show="frmRegistrarDireccion.iptNumero1.$error.pattern" class="text-danger">
                                    @L("zonificacion_direccion_numero1ConNomenclaturaNumerico")
                                </small>
                            </div>
                        </div>
                        <div class="col-lg-4" ng-show="!mostrarAvenidaPrincipal">
                            <div class="form-group">
                                <label class="control-label" for="iptSufijo1">@L("zonificacion_direccion_nuevoDireccionSufijo1")</label>
                                <select ng-model="sufijo1" ng-options="to.id as to.nombreSufijo for to in sufijosLocalidad " class="form-control" required>
                                    <option value="">@L("zonificacion_direccion_nuevoDireccion_Seleccione")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-8" ng-show="mostrarAvenidaPrincipal">
                            <div class="form-group">
                                <label class="control-label" for="iptAvenida1">@L("zonificacion_direccion_nuevoDireccionAvenida1")</label>
                                <select ng-model="avenida1Id" ng-options="to.id as to.nombre for to in avenidasLocalidad " class="form-control" required>
                                    <option value="">@L("zonificacion_direccion_nuevoDireccion_Seleccione")</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="control-label" for="iptTorieLocalidad2">@L("zonificacion_direccion_nuevoDireccionViaSecundaria")</label>
                                <select ng-model="torieLocalidad2" ng-options="to.id as to.nombreTipoOrientacion for to in toriesLocalidad2" ng-change="viaSecundariaChange()" class="form-control" required>
                                    <option value="">@L("zonificacion_direccion_nuevoDireccion_Seleccione")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4" ng-show="!mostrarAvenidaSecundaria">
                            <div class="form-group">
                                <label class="control-label" for="iptNumero2">@L("zonificacion_direccion_nuevoDireccionNumero2")</label>
                                <input type="text" ng-pattern="/^[0-9]+$/" class="form-control" id="iptNumero2" name="iptNumero2" placeholder="@L("zonificacion_direccion_nuevoDireccionNumero2")" ng-model="orientacion2" required maxlength="5" />
                                <small ng-show="frmRegistrarDireccion.iptNumero2.$error.pattern" class="text-danger">
                                    @L("zonificacion_direccion_numero2ConNomenclaturaNumerico")
                                </small>
                            </div>
                        </div>
                        <div class="col-lg-4" ng-show="!mostrarAvenidaSecundaria">
                            <div class="form-group">
                                <label class="control-label" for="iptSufijo2">@L("zonificacion_direccion_nuevoDireccionSufijo2")</label>
                                <select ng-model="sufijo2" ng-options="to.id as to.nombreSufijo for to in sufijosLocalidad " class="form-control" required>
                                    <option value="">@L("zonificacion_manzana_conNomenclatura_seleccione")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-8" ng-show="mostrarAvenidaSecundaria">
                            <div class="form-group">
                                <label class="control-label" for="iptAvenida1">@L("zonificacion_direccion_nuevoDireccionAvenida2")</label>
                                <select ng-model="avenida2Id" ng-options="to.id as to.nombre for to in avenidasLocalidad " class="form-control" required>
                                    <option value="">@L("zonificacion_direccion_nuevoDireccion_Seleccione")</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="iptPorton">@L("zonificacion_direccion_nuevoDireccionPorton")</label>
                                <input type="text" class="form-control" id="iptPorton" name="iptPorton" placeholder="@L("zonificacion_direccion_nuevoDireccionPorton")" ng-model="porton" required maxlength="20" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="iptApto">@L("zonificacion_direccion_nuevoDireccionApto")</label>
                                <input type="text" class="form-control" id="iptApto" name="iptApto" placeholder="@L("zonificacion_direccion_nuevoDireccionApto")" ng-model="apartamento" required maxlength="20" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-show="mostrarNomenclaturaPaisUsa">
                <div ng-show="!mostrarNomenclaturaUsa">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label" for="iptNombreUsa">@L("zonificacion_direccion_nuevoDireccionNombreUsa")</label>
                                <input type="text" class="form-control" id="iptNombreUsa" name="iptNombreUsa" placeholder="@L("zonificacion_direccion_nuevoDireccionNombreUsa")" ng-model="nombreusa" required maxlength="150" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label" for="iptZipUsa">@L("zonificacion_direccion_nuevoDireccionZipCode1")</label>
                                <input type="text" class="form-control" id="iptZipUsa" name="iptZipUsa" placeholder="@L("zonificacion_direccion_nuevoDireccionZipCode1")" ng-model="zipusa1" required maxlength="10" />
                            </div>
                        </div>
                    </div>
                </div>
                <div ng-show="mostrarNomenclaturaUsa">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="control-label" for="iptNumeroUsa">@L("zonificacion_direccion_nuevoDireccionNumeroUsa")</label>
                                <input type="text" ng-pattern="/^[0-9]+$/" class="form-control" id="iptNumeroUsa" name="iptNumeroUsa" placeholder="@L("zonificacion_direccion_nuevoDireccionNumeroUsa")" ng-model="numerousa" required maxlength="5" />
                                <small ng-show="frmRegistrarDireccion.iptNumeroUsa.$error.pattern" class="text-danger">
                                    @L("zonificacion_direccion_numeroUsaConNomenclaturaNumerico")
                                </small>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="control-label" for="iptNombreViaUsa">@L("zonificacion_direccion_nuevoDireccionNombreVia")</label>
                                <select ng-model="nombreviausa" ng-options="to.id as to.nombre for to in avenidasusa" class="form-control" required>
                                    <option value="">@L("zonificacion_direccion_nuevoDireccion_Seleccione")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="control-label" for="iptTipoViaUsa">@L("zonificacion_direccion_nuevoDireccionTipoVia")</label>
                                <select ng-model="tipoviausa" ng-options="to.id as to.nombreSufijo for to in sufijosLocalidad" class="form-control" required>
                                    <option value="">@L("zonificacion_direccion_nuevoDireccion_Seleccione")</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 ">
                            <div class="form-group">
                                <label class="control-label" for="iptZipUsa">@L("zonificacion_direccion_nuevoDireccionZipCode2")</label>
                                <input type="text" class="form-control" id="iptZipUsa" name="iptZipUsa" placeholder="@L("zonificacion_direccion_nuevoDireccionZipCode2")" ng-model="zipusa2" required maxlength="10" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="control-label" for="iptPista">@L("zonificacion_direccion_nuevoDireccionPista")</label>
                        <input type="text" class="form-control" id="iptPista" name="iptPista" placeholder="@L("zonificacion_direccion_nuevoDireccionPista")" ng-model="pista" required maxlength="200" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 text-right">
            <button class="btn btn-success btn-circle btn-lg" ng-click="guardarDireccion()" title="@L("zonificacion_direccion_modalNuevoDireccion_btGuardar")">
                <em class="fa fa-save"></em>
            </button>
        </div>
    </div>
</div>