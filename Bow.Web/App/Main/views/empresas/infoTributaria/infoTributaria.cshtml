                                                        <div class="col-md-12">
                                                            <h5 class="media-heading" ng-class="'text-' + app.theme.name">
                                                                <span ng-show="vm.mostrarFormulario == 'Asignar'">@L("empresas_infoTributaria_localidades_asignar_titulo")</span>
                                                                <span ng-show="vm.mostrarFormulario == 'Eliminar'">@L("empresas_infoTributaria_localidades_eliminar_titulo")</span>
                                                            </h5>

                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 bow-padding-bottom-10">
                                                            <div class="btn-group">
                                                                <div class="radio-inline c-radio">
                                                                    <label>
                                                                        <input type="radio" name="i-radio" value="P" checked="checked" ng-model="vm.opcionBusqueda" ng-change="vm.cambiarListaFiltro()">
                                                                        <span class="fa fa-globe"></span>@L("empresas_infoTributaria_localidades_asignar_tipoBusqueda_pais")
                                                                    </label>
                                                                </div>
                                                                <div class="radio-inline c-radio">
                                                                    <label>
                                                                        <input type="radio" name="i-radio" value="D" checked="checked" ng-model="vm.opcionBusqueda" ng-change="vm.cambiarListaFiltro()">
                                                                        <span class="fa fa-globe"></span>@L("empresas_infoTributaria_localidades_asignar_tipoBusqueda_departamento")
